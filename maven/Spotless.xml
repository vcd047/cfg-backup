<!-- dependencies -->
<dependency>
    <groupId>com.diffplug.spotless</groupId>
    <artifactId>spotless-maven-plugin</artifactId>
    <version>2.22.0</version>
    <optional>true</optional>
</dependency>

<!-- plugins -->
<plugin>
    <groupId>com.diffplug.spotless</groupId>
    <artifactId>spotless-maven-plugin</artifactId>
    <version>2.22.0</version>
    <configuration>
        <java>
            <googleJavaFormat>
                <version>1.8</version>
                <reflowLongStrings>true</reflowLongStrings>
            </googleJavaFormat>
        </java>
    </configuration>
</plugin>